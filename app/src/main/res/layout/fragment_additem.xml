<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".additemFragment"
    android:background="@color/white1"
    android:padding="9sp">

    <ImageView
        android:layout_marginTop="7dp"
        android:id="@+id/additem_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:src="@drawable/ic_launcher_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_dialog">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="Name"
            android:textSize="20sp"
            android:textAllCaps="true"
            />
        <EditText
            android:id="@+id/additem_name"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".4"
            android:background="@drawable/background_btn_white"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_dialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="grading"
        android:textAllCaps="true"
        android:textSize="20sp"


        />
    <RadioGroup
        android:id="@+id/additem_grading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/additem_grading_a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Household"
            android:textSize="20sp"
            android:checked="true"
            android:layout_marginEnd="5dp"/>
        <RadioButton
            android:id="@+id/additem_grading_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="industrial"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>
    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_dialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Approximate expiration date"
        android:textAllCaps="true"
        android:textSize="20sp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:hint="Month"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:hint="ÙDay"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <EditText
            android:id="@+id/additem_M"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:background="@drawable/background_btn_white"
            android:gravity="center"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/purple_500"/>

        <EditText
            android:id="@+id/additem_D"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:inputType="number"
            android:textColor="@color/purple_500"
            android:background="@drawable/background_btn_white"
            android:gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_dialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="the amount of"
        android:textAllCaps="true"
        android:textSize="20sp"        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".35"
        android:padding="5dp"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"/>
        <ImageView
            android:id="@+id/additem_sum_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/background_add_orange"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            >
            <EditText
                android:id="@+id/additem_sum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/background_btn_white"
                android:gravity="center"
                android:textAlignment="center"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/additem_sum_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:text="g"
                android:gravity="center"
                android:textSize="20sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/additem_sum_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:src="@drawable/background_minus_yellow"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/additem_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="add to my list"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:background="@drawable/background_btn_addf_red"
            android:drawableStart="@drawable/add"
            />
        <Button
            android:id="@+id/additem_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="close"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:background="@drawable/background_btn_addf_red"
            android:drawableStart="@drawable/close"

            />
    </LinearLayout>

</LinearLayout>