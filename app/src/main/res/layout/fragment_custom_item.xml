<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom_item_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custom_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_launcher_background" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/custom_floatingactionbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/custom_image"
            android:layout_alignTop="@+id/custom_image"
            android:layout_alignEnd="@+id/custom_image"
            android:layout_marginStart="110dp"
            android:layout_marginTop="113dp"
            android:backgroundTint="@color/white1" />
    </RelativeLayout>





</RelativeLayout>